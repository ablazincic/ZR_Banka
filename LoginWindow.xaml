<Window x:Class="ZR_Banka.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZR_Banka"
        mc:Ignorable="d"
        Title="LoginWindow" Height="700" Width="600" Icon="resources/images/logo.png" Closed="Exit_program">

    <Window.Resources>




    </Window.Resources>
    <Grid Margin="0,0,0,-6">
        <Image x:Name="imgLogo" HorizontalAlignment="Center" Height="250" Margin="0,4,0,430" Width="250">
            <Image.Source>
                <BitmapImage UriSource="pack://application:,,,/resources/images/logo.png"/>
            </Image.Source>
        </Image>



        <Button Style="{StaticResource btnStillizacija1}" x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,419,0,0" VerticalAlignment="Top" Width="104" Height="30" FontFamily="Microsoft YaHei UI" FontSize="14.5" Click="btnLogin_Click"/>
        <TextBox  x:Name="txtUsername" HorizontalAlignment="Center" Margin="0,288,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="24" FontSize="13.5"/>
        <Label Style="{StaticResource LabelStyle}" x:Name="lblUsername" Content="Korisničko ime" HorizontalAlignment="Left" Margin="209,260,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Microsoft YaHei UI" FontWeight="Normal"/>
        <Label Style="{StaticResource LabelStyle}" Content="Zaporka" HorizontalAlignment="Left" Margin="209,349,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Microsoft YaHei UI" FontWeight="Normal"/>
        <Label x:Name="lblRacun" Content="Zaboravio/la si lozinku?" HorizontalAlignment="Center" Margin="0,516,0,0" VerticalAlignment="Top" FontSize="13" FontFamily="Microsoft YaHei UI"/>
        <Label x:Name="lblReset" HorizontalAlignment="Center" Margin="0,507,0,0" VerticalAlignment="Top" FontSize="13" FontFamily="Microsoft YaHei UI"/>
        <Label Content="Copyright @ablazincic 2025" HorizontalAlignment="Left" Margin="441,548,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" FontSize="10"/>
        <Label Content="Nemaš račun?" HorizontalAlignment="Left" Margin="387,14,0,0" VerticalAlignment="Top" FontSize="11" FontFamily="Microsoft YaHei UI"/>
        <Button x:Name="btnRegistracija" Style="{StaticResource btnStillizacija1}" Content="Registracija" HorizontalAlignment="Left" Margin="477,10,0,0" VerticalAlignment="Top" FontSize="13.5" FontFamily="Microsoft YaHei UI" Height="28" Width="102" Click="btnRegistracija_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,379,0,0" VerticalAlignment="Top" Width="160" Height="24"/>
        <TextBlock x:Name="lblResetPW" Text="Resetiraj svoju lozinku." TextDecorations="Underline" Cursor="Hand" Margin="240,543,218,124"/>
        <Label x:Name="lblWarning" Content="" HorizontalAlignment="Center" Margin="0,470,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Foreground="Red" Width="330" RenderTransformOrigin="0.5,0.5" FontSize="14">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.216"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.33"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
    </Grid>


</Window>
