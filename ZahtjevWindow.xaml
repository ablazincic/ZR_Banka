<Window x:Class="ZR_Banka.ZahtjevWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZR_Banka"
        mc:Ignorable="d"
        Title="ZahtjevWindow" Height="530" Width="400">
    <Grid Background="#1A1A1A">
        <Label Content="Zahtjev za kredit" HorizontalAlignment="Left" Margin="76,50,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" FontSize="30" Foreground="White" FontWeight="Bold"/>
        <TextBox x:Name="txtVrsta" HorizontalAlignment="Left" Margin="122,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="25" FontFamily="Microsoft YaHei"/>
        <Label Content="Vrsta kredita:" HorizontalAlignment="Left" Margin="120,165,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Foreground="White" FontWeight="Bold" FontSize="18"/>
        <Label Content="Glavnica:" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Foreground="White" FontWeight="Bold" FontSize="18" Margin="117,254,0,0"/>
        <TextBox x:Name="txtGlavnica" HorizontalAlignment="Left" Margin="122,292,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="26" FontFamily="Microsoft YaHei UI"/>
        <Button x:Name="btnPredaj"  Style="{StaticResource btnStillizacija1}" Content="Pošalji " HorizontalAlignment="Left" Margin="155,440,0,0" VerticalAlignment="Top" Height="32" Width="104" FontFamily="Microsoft YaHei UI" FontSize="18" Click="btnPredaj_Click"/>
        <Label Content="Broj obroka:" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Foreground="White" FontWeight="Bold" FontSize="18" Margin="122,342,0,0"/>
        <TextBox x:Name="txtObrok" HorizontalAlignment="Left" Margin="122,380,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="22"/>

    </Grid>
</Window>
