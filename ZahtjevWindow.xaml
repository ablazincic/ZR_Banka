<Window x:Class="ZR_Banka.ZahtjevWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZR_Banka"
        mc:Ignorable="d"
        Title="ZahtjevWindow" Height="600" Width="400">
    <Grid Background="#1A1A1A">
        <Label Content="Zahtjev za kredit" HorizontalAlignment="Center" Margin="0,52,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" FontSize="30" Foreground="White" FontWeight="Bold"/>
        <TextBox x:Name="txtVrsta" HorizontalAlignment="Center" Margin="0,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="25" FontFamily="Microsoft YaHei"/>
        <Label Content="Navedite vrstu kredita" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Foreground="White" FontWeight="Bold" FontSize="18"/>
        <Label Content="Unesite glavnicu" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Foreground="White" FontWeight="Bold" FontSize="18" Margin="0,307,0,0"/>
        <TextBox x:Name="txtGlavnica" HorizontalAlignment="Center" Margin="0,345,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="25" FontFamily="Microsoft YaHei UI"/>
        <Button x:Name="btnPredaj"  Style="{StaticResource btnStillizacija1}" Content="Pošalji " HorizontalAlignment="Center" Margin="0,428,0,0" VerticalAlignment="Top" Height="32" Width="104" FontFamily="Microsoft YaHei UI" FontSize="18" Click="btnPredaj_Click"/>

    </Grid>
</Window>
