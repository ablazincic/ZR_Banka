<Window x:Class="ZR_Banka.UplataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZR_Banka"
        mc:Ignorable="d"
        Title="UplataWindow" Height="350" Width="400">
    <Grid Background="#1A1A1A" Height="350" Width="400">
        <Label x:Name="lblKredit" Content="Plaćanje za kredit #" HorizontalAlignment="Center" Margin="0,27,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" FontWeight="Bold" FontSize="27" Foreground="White"/>
        <TextBox x:Name="txtIznos" HorizontalAlignment="Center" Margin="0,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Količina (€)" HorizontalAlignment="Center" Margin="0,119,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Foreground="White" FontSize="14"/>
        <DatePicker x:Name="datePickerDatum" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Width="150" />
        <Button x:Name="btnPotvrda" Content="Potvrdi plaćanje" Style="{StaticResource btnStillizacija1}" HorizontalAlignment="Center" Margin="0,274,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Height="27" Width="120" FontWeight="Bold" Click="btnPotvrda_Click"/>

    </Grid>
</Window>
